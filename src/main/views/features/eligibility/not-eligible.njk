{% extends "claim-details-tpl.njk" %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/external-link.njk" import externalLink %}
{% from "../../macro/paper-form-address.njk" import paperFormAddress %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.NOT_ELIGIBLE_FOR_THIS_SERVICE.PAGE_TITLE') }}
{% endblock %}

{% block content %}

  {% set legacyServiceUrl = 'https://www.moneyclaim.gov.uk/web/mcol/welcome' %}
  {% set n1FormUrl = 'https://formfinder.hmctsformfinder.justice.gov.uk/n1-eng.pdf' %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ t('PAGES.NOT_ELIGIBLE_FOR_SERVICE.PAGE_TITLE') }}</h1>
      {% switch reason %}
        {% case NotEligibleReason.CLAIM_VALUE_OVER_25000 %}
          <p class="govuk-body">{{ t('PAGES.NOT_ELIGIBLE_FOR_SERVICE.FOR_CLAIMS_LESS_THAN_25000') }}</p>
          <p class="govuk-body">
            {{ t('PAGES.NOT_ELIGIBLE_FOR_SERVICE.FOR_CLAIMS_BETWEEN_25001_AND_100000') }} 
            {{ externalLink(t, 'PAGES.NOT_ELIGIBLE_FOR_SERVICE.USE_MCOL', legacyServiceUrl, true) }}
          </p>
          <p class="govuk-body">
            {{ t('PAGES.NOT_ELIGIBLE_FOR_SERVICE.CLAIM_BY_PAPER') }} 
            {{ externalLink(t, 'PAGES.NOT_ELIGIBLE_FOR_SERVICE.DOWNLOAD_PAPER_FORM', n1FormUrl, true) }} 
            {{ t('PAGES.NOT_ELIGIBLE_FOR_SERVICE.COMPLETE_AND_RETURN_PAPER_FORM') }}
          </p>
          {{ paperFormAddress() }}
        {% case NotEligibleReason.CLAIM_VALUE_NOT_KNOWN %}
          <p class="govuk-body">{{ t('PAGES.NOT_ELIGIBLE_FOR_SERVICE.YOU_NEED_TO_KNOW_AMOUNT') }}</p>
          <p class="govuk-body">
            {{ t('PAGES.NOT_ELIGIBLE_FOR_SERVICE.CANT_CALCULATE_THE_AMOUNT') }}
            {{ externalLink(t, 'PAGES.NOT_ELIGIBLE_FOR_SERVICE.N1_PAPER_FORM', n1FormUrl, true) }}.
          </p>
          {{ paperFormAddress() }}
        {% default %}
          NEITHER BAR NOR BAZ
      {% endswitch %}
      {{ contactUsForHelp(t) }}
    </div>
  </div>
{% endblock %}
